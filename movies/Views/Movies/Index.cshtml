@model List<Movie>
@{
    Layout = null;
}


<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>MovieHunter</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="stylesheet" href="~/moviehunter/css/style.css" type="text/css" media="all" />
    <script type="text/javascript" src="~/moviehunter/js/jquery-1.4.2.min.js"></script>
    <script type="text/javascript" src="~/moviehunter/js/jquery-func.js"></script>
</head>
<body>
    <div id="shell">
        <div id="header">
            <div id="search">
                <form action="#" method="get" accept-charset="utf-8">
                    <label for="search-field">Ara</label>
                    <input type="text" name="search field" value="Enter search here" id="search-field" class="blink search-field" />
                    <input type="submit" value="GO!" class="search-button" />
                </form>
            </div>
        </div>
    </div>
    <div id="main">
        <div id="content">
            <div class="box">
            </div>
            <div class="box">
                <div class="head">
                    <h2>popüler</h2>
                    <p class="text-right"><a href="#">Tüm filmleri gör</a></p>
                </div>
                @foreach (var item in Model)
                {
                    <div class="movie last">
                        <div class="movie-image"> <span class="play"><span class="name">@item.movieName</span></span> <a href="#"><img src="css/images/movie12.jpg" alt="" /></a> </div>
                        <div class="rating">
                            <p>@item.popularite</p>
                            <div class="stars">
                                @ViewBag.date
                            </div>
                        </div>
                        <span class="comments">@ViewBag.rate</span>
                    </div>
                }

            </div>
            <div class="cl">&nbsp;</div>
        </div>
        <div class="box">

        </div>
    </div>
    </div>
    <div id="footer">
        <p class="lf">Copyright &copy; 2010 <a href="#">SiteName</a> - All Rights Reserved</p>
        <p class="rf">Design by <a href="http://chocotemplates.com/">ChocoTemplates.com</a></p>
        <div style="clear:both;"></div>
    </div>
    </div>
</body>
</html>